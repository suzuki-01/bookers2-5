<h2><%= @range + 's' %> search for "<%= "#{@word}" %>"</h2>

<table class="table table-hover ">
  <% if @range == "User" %>
   <thead>
     <tr>
      <th>Image</th>
      <th>Name</th>
     </tr>
   </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "50x50" %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>

  <% else %>
   <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
   </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>